
# Description of  the  device physical regions
Device
{
  meshfile = test.msh
  material = InGaAs
  mesh_units = 1e-9

  Doping {
    type = donor
    density = 1e17
  }


   Region bulk 
   {
     alloy_composition 1d_profile
     { 
       intervals = 20
       source = profile.dat
     }
   }

}

Module driftdiffusion
{ 
              
  name = dd
  plot = (Ec, Ev, Ec0, eQFermi, ElPotential, hQFermi, eDensity, hDensity, NetRecombination, ContactCurrents, RegionIDs)

  Physics
  {

    particle_density
    { 
      statistics = boltzmann
    }


    recombination srh {}

  }   


