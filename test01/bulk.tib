
# Description of  the  device physical regions
Device
{
  meshfile = bulk.msh
  material = Si


   Region bulk 
   {
     Doping { Nd = 1e16 type = donor}
   }

   Region ndop 
   {
     Doping { Nd = 1e19 type = donor }
   }


}


Module driftdiffusion
{ 
              
  name = driftdiffusion
  plot = (Ec, Ev, eQFermi, hQFermi, NetRecombination, ContactCurrents)

  Physics
  {

    particle_density
    { 
      statistics = boltzmann
    }


    recombination srh {}

  }   


  Contact anode
  {
    type = ohmic
    voltage = $Vb
  }

  Contact cathode
  {
    type = ohmic
    voltage = 0.0
  }

}  



Module sweep
{
  solve = driftdiffusion
  variable = $Vb
  start = 0.0
  stop = 1
  steps = 10
}



Simulation
{
  temperature = 300
  solve = sweep
  resultpath = output
  output_format = grace
}














