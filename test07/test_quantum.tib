Module elasticity
{

  name = str
  plot = (Strain, Stress)

  Physics
  {
    body_force lattice_mismatch
    {
      reference_material = GaAs
    }

  }
    
  Boundary clamp
  {
    regions = 1
  }
    
}




Module driftdiffusion
{ 

  name = dd
  plot = (Polarization, Ec, Ev, eQFermi, hQFermi, ElField , eDensity, hDensity, CurrentDensity, NetRecombination)

  coupling = poisson
  integration_order = 2
       
  Solver
  {
    max_iterations = 70
    relative_tolerance = 1e-10
    absolute_tolerance = 1e-10
    step_tolerance = 1e-9
    max_step = 4
    ksp_type = bcgs
  }


    
  Physics
  {

    recombination srh { }

    valence_band
    {
      density_of_states bulk_kp
      {
        strain = str
      }
    }
    
    conduction_band
    {
      density_of_states quantum
      {
        quantum_simulation = quantum_el
        barrier_regions = buffer

        classical_DOS bulk_kp 
        {
          strain = str
        }
      }
    }
  
     
    mobility doping_dependent { }

  }

  Boundary cathode
  {
    regions = 1
    #zero_grad_fermi_e = true
    type = ohmic
  }


  Boundary anode
  {
    regions = 2
    #zero_grad_fermi_e = true
    type = ohmic
    voltage = $Vb[0.0]  
  }
 

}


 


Module efaschroedinger
{
  name = quantum_el
  regions = (1, 4, 5)

  poisson_model_name = dd
  strain_model_name = str

  print_hamiltonian = true
  write_matrices_to_files = true


  quadrature_rule = trapez

  Solver
  {
    num_electron_states = 5
    #solver = lapack
  }

  plot = (ProbabilityDensity, EigenEnergy, eDensity)

  Physics
  {
    model = conduction_band    
  }
}




Module sweep
{
  variable = $Vb
  start = 0.0
  stop =  0.3  #3.5 # 1.0
  steps = 10  # 70 # 20
}

Module selfconsistent
{
  solve = (quantum_el, dd)
  #relaxation_factor = 0.1
  max_iterations = 10
  absolute_tolerance = 5e-4
  relative_tolerance = 1e-9
  monitor = true
}



Simulation
{
  temperature = 300
  solve = (str, dd, quantum_el, selfconsistent)
  #solve = (str, dd, quantum_el)
  resultpath = output
  output_format = grace
}
