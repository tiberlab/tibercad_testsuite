
# Description of  the  device physical regions
Device
{
  meshfile = test.msh
  material = InGaAs
  mesh_units = 1e-9

  Doping {
    type = donor
    density = 1e17
  }


   Region bulk 
   {
     alloy_composition
     { 
       min_content = 0.0
       max_content = 0.3
       #intervals = 20
       content = imagereader.Data
     }
   }

}

Module imagereader
{
  image_file = test.png
  plot = (RegionIDs, Data)
  pixel_size = 1e-9
  data_scaling = 0.002
}


Module driftdiffusion
{ 
              
  name = dd
  plot = (Ec, Ev, Ec0, eQFermi, ElPotential, hQFermi, eDensity, hDensity, NetRecombination, ContactCurrents, RegionIDs)

  Physics
  {

    particle_density
    { 
      statistics = boltzmann
    }


    recombination srh {}

  }   


