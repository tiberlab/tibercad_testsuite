Device
{

  meshfile = mesh.msh  
  mesh_units = 1e-6

  material = ZnO

  dimension = 3

  Region Column{

  material = ZnO

  Doping{
   Nd = 1e16
   type = donor
   Ed = 0.035
  }

  }

}

Module elasticity
{

plot = (Strain,Stress,Displacement)

Solver {
  preconditioner = jacobi
}

Physics
{
  stiffness isotropic
  {
   young = 149
   poisson = 0.349
  }
}

Contact Upper {
type = surface_force
force = (0.0,0.0,-0.00625)
}

Contact Lower {type = clamp}

}

Module driftdiffusion
{
    enforce_local_charge_neutrality = false
    coupling = poisson
    reference_contact = Lower
    default_boundary_condition = zero_displacement
    plot = (ElPotential,ElField,eDensity,Ec,Ev,Polarization,IonizedDonors)

  Physics
  {
 
    polarization piezo
    {
     strain_simulation = elasticity
    }

  }

  Contact Lower
  { 
    type = ohmic
    regions = Lower
    voltage = 0.0
  }
}


Simulation
{
  solve = (elasticity,driftdiffusion)
  #solve = (driftdiffusion)
  resultpath = output
  verbose = 3
  searchpath = .
  output_format = vtk
}
