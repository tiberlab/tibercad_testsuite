
# Description of  the  device physical regions
Device
{
  meshfile = bulk.msh
  material = Si


   Region bulk { }

   Region ndop 
   {
     Doping { Nd = 1e19 type = donor }
   }


}


Module driftdiffusion
{ 
              
  name = driftdiffusion
  plot = (Ec, Ev, eQFermi, hQFermi, NetRecombination, ContactCurrents, IonizedElectronTraps, IonizedHoleTraps)

  Solver
  {
    nonlinear_solver = linesearch
    #linear_solver = pardiso
    #ksp_type = bcgsl
    #pc_type = lu
    max_iterations = 20
    step_tolerance = 1e-4
    #max_step = 20
  }


  Physics
  {

    particle_density
    { 
      statistics = boltzmann
    }


    recombination srh {}

    trap acceptor
    {
      Nt = 1e16
      Et = 0.2
      reference = midgap
    }

    trap donor
    {
      Nt = 2e16
      Et = 0.4
      reference = cb
    }
  }

  Contact anode
  {
    type = ohmic
    voltage = $Vb
  }

  Contact cathode
  {
    type = ohmic
    voltage = 0.0
  }
 
}  



Module sweep
{
  solve = driftdiffusion
  variable = $Vb
  start = 0.0
  stop = 1
  steps = 10
}



Simulation
{
  temperature = 300
  solve = sweep
  resultpath = output
  output_format = grace
}














