
# diode example

Device
{
   meshfile = test_03.msh
   dimension = 1
   material = Si
   
   Region rod{}

}


# Definition of  Simulation Models  and associated Boundary Conditions 
  
Module thermal
{

  plot = LatticeTemp
 
   Contact right
   {
     type = heat_reservoir
     temperature = 500
   }
  
   Contact left
   {
     type = heat_reservoir
     temperature = 400
   }
}  
  
Simulation
{
  solve = thermal
  resultpath = output
  output_format = grace
  verbose = 3
}


