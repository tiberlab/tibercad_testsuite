# diode example

$Device
{
   Region Air
   {
     reg_numb = 1
     mat = Si
     doping = 1e18 doping_type = acceptor

   }

   Region p_side 
   {
     reg_numb = 2
     mat = Si
     doping = 1e18 doping_type = acceptor
   }

   Region n_side 
   {
     reg_numb = 3
     mat = Si
     doping = 1e18 doping_type = donor
   }

   Region Air2
   {
     reg_numb = 4
     mat = Si
     doping = 1e18 doping_type = donor

   }

}


# Definition of  Simulation Models  and associated Boundary Conditions 
$Models
{
  
  
  
  model thermal
  {

     options
    { 
      simulation_name = tt
      physical_regions = all
    }

    physical_model heat_source
    {

      model = drift_diffusion_dissipation

      drift_diffusion_simulation = dd

    }

    BC_Regions
    {
        BC_Region reservoir
   	{
         type = heat_reservoir
         BC_reg_numb = (1,4)
         temperature = 300
   	}  
     }
  }
  
  

  model driftdiffusion
  { 
              
    options
    {
     simulation_name = dd
     physical_regions = all
    }

     physical_model recombination
     { 
       model  =  srh
     }                
     
     physical_model thermoelectric_power
     {
       model = diffusivity_model
     }

    BC_Regions  
    {
      BC_Region anode
      {
        BC_reg_numb = 1
        type = ohmic
        voltage = @Vb[0.0]
      }

      BC_Region cathode
      {
        BC_reg_numb = 4
        type = ohmic
        voltage = 0.0
      }
 
    }   
  }  
}


# Definition of  Model-dependent Solver parameters
$Solver

{


  driftdiffusion
  {
    nonlin_rel_tol = 1e-12
    nonlin_step_tol = 1e-6
    nonlin_max_it = 50
    ls_max_step = 1
  }

  selfconsistent
  {
     flavour = relaxation
     relaxation_factor = 0.5
     simulations = (dd,tt)
     abs_tolerance = 1e-5
     rel_tolerance = 1e-5
     max_iterations = 30
     monitor = true
  }

  sweep
  {
    simulation = selfconsistent
    #simulation = (dd,tt)
    variable = Vb
    start = 0.0
    stop = 1.1
    steps = 11
  }
}



# Definition of  Model dependent physical parameters
$Physics
{
  driftdiffusion 
  {
    thermal_simulation = tt
  }
}


# Definition of  model-indipendent parameters of the Simulation


$Simulation
{
  
  meshfile = test_03.msh
  dimension = 1
  temperature = 300
  solve = sweep
  resultpath = output
  output_format = grace
  plot = (ContactCurrents,Pn,Pp,thermal)
}





