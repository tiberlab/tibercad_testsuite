Device
{
  #meshfile = mesh50x50x50.msh 
  meshfile = mesh_equilibrated_50x150x1_0_65_sq_6.msh  
  mesh_units = 1e-9
  dimension = 2 

  Region qbox
  {
    material = Perovskite 
  }
}

Module polarizationgrid
{
  regions = (qbox)
  plot = (Polarization,autocorrelation)

  Nx = 150
  Ny = 50
  Nz = 1 

  grid_step = 0.65 

  periodic = (false, false, false)
  cutoff = 8.0
 
  seed = 345678912 
  Nstep = 1
  IOstep = 1

  dipole_units = C/m^2
  dipole = 0.13
  
  #dipole = 13.75
  #dipole_units = Debye
  #dipole = 2.29

  eps_r = 6.1

  kbT = 0.026

  # Field in V/cm
  #external_field=(1e5,1e5,0) 

  read_file = correlation_IEEE/polarization.dat
  #nz_start = 20
  #nz_end = 24
  #write_file = polarization.dat 

}

Fodule driftdiffusion
{ 
  plot = (Ec, Ev, eDensity, hDensity, ElField, ElPotential)  

  coupling = poisson
 
  Physics
  {
     polarization{ polarization = polarizationgrid.Polarization } 

     band_properties simple{}
  }

}


Simulation
{
  solve = (polarizationgrid) 
  #, driftdiffusion)

  resultpath = correlation_IEEE 
}

