Device
{
    meshfile = mesh.msh
    mesh_units = 1e-9
    dimension = 3

    material = GaN
    y-growth-direction = (-1,0,1,0)
    x-growth-direction = (-1,2,-1,0)
    z-growth-direction = (0,0,0,1)

    Region Column{}

    Atomistic tb1
    {
       regions = Column 
       reference_region = Column
       passivation = no
    }   
}


Module elasticity
{
 plot = (Strain,Stress,Displacement)

 Contact (Lower,Upper){type = clamp}

 Contact Force {type = surface_force
                force = (0.0,0.1,0.0)}

 
}

Simulation{
verbose = 3
resultpath = output
solve = elasticity
}
